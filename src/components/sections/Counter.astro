---
/* No script changes needed */
---

<section class="relative bottom-0 left-0 h-[40vh] m-0 overflow-hidden bg-gradient-to-br from-[#0042A6] via-[#043186] to-[#07173F] flex items-center justify-center z-[100]">
    <div class="absolute top-0 left-0 w-full h-full z-[-1] pointer-events-none bg-[repeating-radial-gradient(circle_at_center,_#07173F_0px,_transparent_1px,_transparent_80px,_transparent_10px)]"></div>
    <div class="flex flex-col items-center w-full">
        <div class="text-white text-lg sm:text-xl xl:text-2xl font-firaSansBlack mb-4 uppercase tracking-wider">Faltan:</div>
        <div class="flex justify-center items-center gap-8 font-firaSansBlack xl:text-2xl p-8 text-white text-center
            px-4 sm:px-8
            text-base sm:text-lg md:text-xl xl:text-2xl">
            <div class="flex flex-col items-center">
                <number-flow id="days" class="text-xl sm:text-2xl md:text-3xl"></number-flow>
                <div class="text-xs sm:text-base text-white mt-2 uppercase tracking-wider">d√≠as</div>
            </div>
            <div class="flex flex-col items-center">
                <number-flow id="hours" class="text-xl sm:text-2xl md:text-3xl"></number-flow>
                <div class="text-xs sm:text-base text-white mt-2 uppercase tracking-wider">horas</div>
            </div>
            <div class="flex flex-col items-center">
                <number-flow id="minutes" class="text-xl sm:text-2xl md:text-3xl"></number-flow>
                <div class="text-xs sm:text-base text-white mt-2 uppercase tracking-wider">minutos</div>
            </div>
            <div class="flex flex-col items-center">
                <number-flow id="seconds" class="text-xl sm:text-2xl md:text-3xl"></number-flow>
                <div class="text-xs sm:text-base text-white mt-2 uppercase tracking-wider">segundos</div>
            </div>
        </div>
    </div>
    <style>
        ::selection {
            background: #eafe07;
            color: black;
        }
        ::-moz-selection {
            background: #eafe07;
            color: black;
        }
    </style>
    <script type="module">
        import 'https://esm.sh/number-flow'

        const flowD = document.getElementById('days')
        const flowH = document.getElementById('hours')
        const flowM = document.getElementById('minutes')
        const flowS = document.getElementById('seconds')

        const target = new Date("2025-10-04T00:00:00")

        function update() {
            const now = new Date()
            const diff = Math.max(0, target - now)

            const s = Math.floor(diff / 1000) % 60
            const m = Math.floor(diff / 60000) % 60
            const h = Math.floor(diff / 3600000) % 24
            const d = Math.floor(diff / 86400000)

            flowD.update(d)
            flowH.update(h)
            flowM.update(m)
            flowS.update(s)
        }

        update()
        setInterval(update, 1000)
    </script>
</section>
