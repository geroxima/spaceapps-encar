---
import { Image } from "astro:assets";
import Container from "@/components/Container.astro";
import logo from "public/images/local-logo.webp";
---

<footer class="bg-black text-white">
  <Container class="flex flex-col 2xl:flex-row gap-10">
    <aside class="w-full 2xl:w-1/2 flex flex-col items-center 2xl:items-start mb-10 2xl:mb-0">
      <img
        src="/images/local-logo.webp"
        width="120"
        height="120"
        alt="NASA Space Apps Challenge Logo"
        class="mb-4"
      />
      <p class="text-center 2xl:text-left text-sm md:text-base mb-6">2025 NASA Space Apps Challenge | Evento Local: Encarnación</p>
      
      <!-- Registration CTA -->
      <div class="mb-6">
        <a
          href="#registro"
          class="bg-neonYellow text-black font-overpassBold font-bold text-lg px-8 py-4 rounded-lg transition hover:bg-[#C7D806] transform duration-200 inline-block"
        >
          ¡REGÍSTRATE AHORA!
        </a>
      </div>
      
      <a
        href="https://spaceappschallenge.org"
        target="_blank"
        rel="noopener noreferrer"
        class="hover:underline hover:text-rocketRed transition-all ease-out duration-75 text-center 2xl:text-left text-sm md:text-base"
        >spaceappschallenge.org</a
      >
    </aside>

    <div class="flex flex-col md:flex-row justify-around w-full gap-10">
      <div class="flex flex-col gap-y-2 items-center md:items-start">
        <h3 class="text-white text-lg font-bold mb-4 md:mb-10">Contacto</h3>
        <a
          href="mailto:info@spaceappsencarnacion.live"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:underline hover:text-rocketRed transition-all ease-out duration-75 text-sm md:text-base"
          >info@spaceappsencarnacion.live</a
        >
        <a
          href="tel:+595994177042"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:underline hover:text-rocketRed transition-all ease-out duration-75 text-sm md:text-base"
          >+595 994 177042</a
        >
      </div>
      <div class="flex flex-col gap-y-2 items-center md:items-start">
        <h4 class="text-white text-lg font-bold mb-4 md:mb-10">Redes Sociales</h3>
        <a
          href="https://instagram.com/nsacencar"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:underline hover:text-rocketRed transition-all ease-out duration-75 text-sm md:text-base"
          >Instagram</a
        >
        <a
          href="https://x.com/nsacencar"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:underline hover:text-rocketRed transition-all ease-out duration-75 text-sm md:text-base"
          >X (Twitter)</a
        >
      </div>
    </div>
  </Container>
</footer>
