<section>
    <div class="pattern-circle"></div>
    <div class="countdown">
        <div class="time-block">
            <number-flow id="days"></number-flow>
            <div class="label">d√≠as</div>
        </div>
        <div class="time-block">
            <number-flow id="hours"></number-flow>
            <div class="label">horas</div>
        </div>
        <div class="time-block">
            <number-flow id="minutes"></number-flow>
            <div class="label">minutos</div>
        </div>
        <div class="time-block">
            <number-flow id="seconds"></number-flow>
            <div class="label">segundos</div>
        </div>
    </div>
    <style>
        section {
            position: relative;
            bottom: 0;
            left: 0;
            height: 40vh;
            margin: 0;
            overflow: hidden;
            background: linear-gradient(135deg,
                    #0042A6 0%,
                    #043186 40%,
                    #07173F 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 100;
        }

        .pattern-circle {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            pointer-events: none;
            background: repeating-radial-gradient(circle at center,
                    #07173F 0px,
                    transparent 1px,
                    transparent 80px,
                    transparent 10px);
        }

        .countdown {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 2rem;
            font-family: 'Fira Sans Black', sans-serif;
            font-size: 2rem;
            padding: 2rem;
            color: #fff;
            text-align: center;
        }

        ::selection {
            background: #eafe07;
            color: black;
        }

        ::-moz-selection {
            background: #eafe07;
            color: black;
        }

        .time-block {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        number-flow {
            font-size: 3rem;
        }

        .label {
            font-size: 1rem;
            color: #fff;
            margin-top: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }
    </style>

    <script type="module">
        import 'https://esm.sh/number-flow'

        const flowD = document.getElementById('days')
        const flowH = document.getElementById('hours')
        const flowM = document.getElementById('minutes')
        const flowS = document.getElementById('seconds')

        const target = new Date("2025-10-04T00:00:00")

        function update() {
            const now = new Date()
            const diff = Math.max(0, target - now)

            const s = Math.floor(diff / 1000) % 60
            const m = Math.floor(diff / 60000) % 60
            const h = Math.floor(diff / 3600000) % 24
            const d = Math.floor(diff / 86400000)

            flowD.update(d)
            flowH.update(h)
            flowM.update(m)
            flowS.update(s)
        }

        update()
        setInterval(update, 1000)
    </script>
</section>
